<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:id="@+id/card_thought"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="10dp"
        android:elevation="30dp"
        android:outlineAmbientShadowColor="@color/colorPrimary"
        android:outlineSpotShadowColor="@color/colorPrimary"
        app:cardCornerRadius="8dp">

        <TextView
            android:id="@+id/title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_margin="16dp"
            android:padding="15dp"
            android:ellipsize="end"
            android:ems="2"
            android:gravity="top"
            android:lineSpacingExtra="9sp"
            android:maxLines="4"
            android:text="ewinkjcnwencewc kcnwcknckcwncwc kc kwcnwc kcnkwc kwnckwkjc kwnck ckjwcnkwc wc wkc kwjncc jkwcnw kcjkwcn wkjcnwkcj wkcnc wkjec kwc kwc kw "
            android:textSize="18sp"
            android:translationY="-3.28sp" />
    </androidx.cardview.widget.CardView>
</LinearLayout>