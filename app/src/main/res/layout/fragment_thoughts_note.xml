<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    tools:context="com.pratheek.thoughts.ThoughtsNote">

    <TextView
        android:id="@+id/close_thought"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="15dp"
        android:background="@drawable/ic_baseline_close_24" />

    <TextView
        android:id="@+id/save_thought"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:background="@drawable/ic_baseline_check_24" />

    <TextView
        android:id="@+id/card_color_theme"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/save_thought"
        android:background="@drawable/ic_baseline_color_lens_24" />

    <TextView
        android:id="@+id/edit_text_font_theme"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/card_color_theme"
        android:background="@drawable/ic_baseline_text_fields_24" />

    <TextView
        android:id="@+id/edit_text_color"
        android:layout_width="28dp"
        android:layout_height="28dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="15dp"
        android:layout_toStartOf="@id/edit_text_font_theme"
        android:background="@drawable/ic_baseline_colorize_24" />

    <androidx.cardview.widget.CardView
        android:id="@+id/thought_card"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginStart="30dp"
        android:layout_marginTop="100dp"
        android:layout_marginEnd="30dp"
        android:layout_marginBottom="100dp"
        android:elevation="30dp"
        app:cardCornerRadius="40dp">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/thought_edit_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="25dp"
            android:background="@android:color/transparent"
            android:fontFamily="@font/roboto"
            android:gravity="center"
            android:hint="Your Thoughts"
            android:lineSpacingExtra="8sp"
            android:maxLength="400"
            android:maxLines="20"
            android:padding="2dp"
            android:textSize="22sp" />
    </androidx.cardview.widget.CardView>


</RelativeLayout>